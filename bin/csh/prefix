#!/bin/csh 

#####################
# prelim
#####################

setenv HERE `pwd`
setenv ARCH `uname -m`

setenv MACH "`uname -m`-`uname -s`-`uname -r`"
echo $MACH >>& /dev/stderr
mkdir -p ../$ARCH

setenv PATH  ".:../${ARCH}:${PATH}"

if (! $?BPMS )set BPMS = ${HERE}/../..

source ${BPMS}/configuration.dat

