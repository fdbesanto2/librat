#!/bin/csh -f

set HERE = $0:h
if ( $HERE == 'test' )set HERE = '.'

cd $HERE
set HERE = `pwd`

if (! $?BPMS )set BPMS = ${HERE}/../..
cd $BPMS
set BPMS = `pwd`

cd $HERE
set csh = $BPMS/bin/csh

setenv ARCH `uname -m`
# fix for sed 
set q = '\/'
set BPMS_ = `echo $BPMS | sed 's/\//Qq/g'`
sed < $BPMS/src/Makefile.in 's/__BPMS__/'$BPMS_'/' | sed 's/Qq/'$q'/g' | sed 's/__ARCH__/'$ARCH'/' > $BPMS/src/makefile

cd $csh
source prefix
#########################
# tests
#########################

source test_CC 
source test_OPT
source test_DYN
source test_MAKE
source test_WG


cd $csh
source postfix
exit 0
