#!/bin/csh -f


########
# wget or curl
########
set WGET = ( `which wget` )
set WG = "-N"
set nWGET = 0
if ( $#WGET > 1 ) then
  # try curl
  set WGET = (`which /usr/bin/curl`)
  if ( $#WGET > 1 ) then
    set WGET = ( `which curl` )
    if ( $#WGET > 1 ) then
      echo "Cant find wget or curl ..." >>& /dev/stderr
      exit 1;
    endif
  endif
  set nWGET = 1
  set WG = "-L -R --create-dirs -o"
endif

echo "** WG : $WG"

