#!/bin/csh -f
if (! $?BPMS ) then
  setenv BPMS ${HERE}/../..
  cd $BPMS
  setenv BPMS `pwd`
endif


# this is a fix for os x only
set os = "`uname -s`"
set arch = `uname -m`


if ( ! $?LD_LIBRARY_PATH ) then
  setenv LD_LIBRARY_PATH "$BPMS/lib"
else
   setenv LD_LIBRARY_PATH "$BPMS/lib:$LD_LIBRARY_PATH"
endif
if ( ! $?DYLD_LIBRARY_PATH ) then
  setenv DYLD_LIBRARY_PATH "$BPMS/lib"
else
   setenv DYLD_LIBRARY_PATH "$BPMS/lib:$DYLD_LIBRARY_PATH"
endif


