#!/bin/csh -f
set HERE = $0:h
if ( $HERE == 'test_start' )set HERE = '.'
cd $HERE
set HERE = `pwd`
source test_prefix
set name = $0:t

set TEST = $BPMS/test/test_start
set path = ($BPMS/bin/$arch $BPMS/bin/csh $path)
setenv MATLIB $TEST
setenv MATERIAL $TEST
setenv RSRLIB $TEST
setenv SKY_ILLUMINATION $TEST
setenv ARARAT_OBJECT $TEST
setenv DIRECT_ILLUMINATION $TEST

start < $TEST/starttest.ip -sensor_wavebands wavebands.dat -m 100 -sun_position 0 0 10 test.obj >& $TEST/$name.op

#echo "this result"
#echo "==========="
#cat $TEST/testMe.this.op

#echo "diff of file:"
#echo "============="
diff $TEST/$name.test.op $TEST/$name.op >/dev/null
set comp_value = $?

if ( $comp_value == 1 ) then
  echo "$name failed" >& /dev/stderr
  exit 1
else
  echo "$name passed" >& /dev/stderr
  exit 0
endif

